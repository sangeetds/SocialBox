<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

  <androidx.cardview.widget.CardView
      android:id="@+id/movieCard"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="5dp"
      android:layout_marginStart="5dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:cardCornerRadius="1dp"
      >

    <ImageView
        android:id="@+id/movieCardImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/movie_poster"
        />
  </androidx.cardview.widget.CardView>

  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/movieStarRatings"
      android:layout_width="100dp"
      android:layout_height="30dp"
      android:layout_marginStart="5dp"
      android:layout_marginTop="2dp"
      android:fontFamily="@font/rene_bieder_milliard_medium"
      android:gravity="center"
      android:padding="2dp"
      android:paddingEnd="12dp"
      android:paddingStart="10dp"
      android:text="@string/s_5_0"
      android:textSize="13sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/movieCard"
      app:drawableStartCompat="@drawable/ic_baseline_grade_24"
      />

</androidx.constraintlayout.widget.ConstraintLayout>