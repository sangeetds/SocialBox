<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.ui.ChatSettingsActivity"
    >

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="?attr/colorPrimary"
        app:cardCornerRadius="10dp"
        >
      <RelativeLayout
          android:id="@+id/relativeLayout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:orientation="vertical"
            >
          <RelativeLayout
              android:id="@+id/moviesLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="230dp"
                android:background="#CDCDCD"
                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/movieOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginTop="70dp"
                app:cardCornerRadius="5dp"
                >
              <ImageView
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  android:contentDescription="@string/movies"
                  />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/movieThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="255dp"
                android:layout_marginTop="70dp"
                app:cardCornerRadius="5dp"
                >
              <ImageView
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  android:contentDescription="@string/movies"
                  />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/movieTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="70dp"
                app:cardCornerRadius="5dp"
                >
              <ImageView
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  android:contentDescription="@string/movies"
                  />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/viewAllMovies"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="190dp"
                android:fontFamily="@font/work_sans_bold"
                android:gravity="center"
                android:text="@string/view_all"
                android:textColor="#880E4F"
                android:textSize="14sp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/work_sans_bold"
                android:gravity="center"
                android:text="@string/group_movies"
                android:textSize="18sp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/work_sans_bold"
                android:gravity="center"
                android:text="@string/group_movies"
                android:textSize="18sp"
                />
          </RelativeLayout>

          <RelativeLayout
              android:id="@+id/settingsLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="20dp"
              >

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/work_sans_bold"
                android:gravity="center"
                android:text="@string/group_settings"
                android:textSize="18sp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/work_sans_bold"
                android:gravity="center"
                android:text="@string/group_settings"
                android:textSize="18sp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/addMember"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:elevation="5dp"
                android:fontFamily="@font/work_sans_light"
                android:gravity="center_vertical"
                android:paddingEnd="18dp"
                android:paddingStart="25dp"
                android:text="@string/add_a_member"
                android:textFontWeight="1000"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/leaveGroup"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="110dp"
                android:elevation="5dp"
                android:fontFamily="@font/work_sans_light"
                android:gravity="center_vertical"
                android:paddingEnd="18dp"
                android:paddingStart="25dp"
                android:text="@string/leave_group"
                android:textColor="#880E4F"
                android:textFontWeight="1000"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                />
          </RelativeLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/membersConstrainView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            >

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginEnd="50dp"
              android:layout_marginStart="50dp"
              android:layout_marginTop="20dp"
              android:background="#CDCDCD"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/viewAllMembers"
              />
          <com.google.android.material.card.MaterialCardView
              android:id="@+id/memberSelf"
              android:layout_width="112dp"
              android:layout_height="112dp"
              android:layout_marginEnd="50dp"
              android:layout_marginTop="15dp"
              app:layout_constraintEnd_toStartOf="@id/memberOne"
              app:layout_constraintTop_toBottomOf="@id/groupMembers"
              app:cardCornerRadius="60dp"
              >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="@string/current_user_image"
                android:translationX="-4dp"
                android:translationY="-4dp"
                />
          </com.google.android.material.card.MaterialCardView>

          <com.google.android.material.card.MaterialCardView
              android:id="@+id/memberOne"
              android:layout_width="46dp"
              android:layout_height="46dp"
              android:layout_marginEnd="10dp"
              android:layout_marginTop="20dp"
              app:layout_constraintEnd_toStartOf="@+id/memberThree"
              app:layout_constraintTop_toBottomOf="@id/groupMembers"
              app:cardCornerRadius="50dp"
              >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/current_user_image"
                android:translationX="-2dp"
                android:translationY="-2dp"
                />
          </com.google.android.material.card.MaterialCardView>
          <com.google.android.material.card.MaterialCardView
              android:id="@+id/memberTwo"
              android:layout_width="46dp"
              android:layout_height="46dp"
              android:layout_marginEnd="10dp"
              android:layout_marginTop="10dp"
              app:layout_constraintEnd_toStartOf="@+id/memberFour"
              app:layout_constraintTop_toBottomOf="@id/memberOne"
              app:cardCornerRadius="50dp"
              >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/current_user_image"
                android:translationX="-2dp"
                android:translationY="-2dp"
                />
          </com.google.android.material.card.MaterialCardView>
          <com.google.android.material.card.MaterialCardView
              android:id="@+id/memberThree"
              android:layout_width="46dp"
              android:layout_height="46dp"
              android:layout_marginEnd="10dp"
              android:layout_marginTop="20dp"
              app:layout_constraintEnd_toStartOf="@id/memberFive"
              app:layout_constraintTop_toBottomOf="@+id/groupMembers"
              app:cardCornerRadius="50dp"
              >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/current_user_image"
                android:translationX="-2dp"
                android:translationY="-2dp"
                />
          </com.google.android.material.card.MaterialCardView>
          <com.google.android.material.card.MaterialCardView
              android:id="@+id/memberFour"
              android:layout_width="46dp"
              android:layout_height="46dp"
              android:layout_marginEnd="10dp"
              android:layout_marginTop="10dp"
              app:layout_constraintEnd_toStartOf="@id/memberSix"
              app:layout_constraintTop_toBottomOf="@id/memberThree"
              app:cardCornerRadius="50dp"
              >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/current_user_image"
                android:translationX="-2dp"
                android:translationY="-2dp"
                />
          </com.google.android.material.card.MaterialCardView>

          <com.google.android.material.card.MaterialCardView
              android:id="@+id/memberFive"
              android:layout_width="46dp"
              android:layout_height="46dp"
              android:layout_marginTop="20dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@id/groupMembers"
              app:cardCornerRadius="50dp"
              >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/current_user_image"
                android:translationX="-2dp"
                android:translationY="-2dp"
                />
          </com.google.android.material.card.MaterialCardView>

          <com.google.android.material.card.MaterialCardView
              android:id="@+id/memberSix"
              android:layout_width="46dp"
              android:layout_height="46dp"
              android:layout_marginTop="10dp"
              app:layout_constraintEnd_toEndOf="parent"

              app:layout_constraintTop_toBottomOf="@id/memberFive"
              app:cardCornerRadius="50dp"
              >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/current_user_image"
                android:translationX="-2dp"
                android:translationY="-2dp"
                />
          </com.google.android.material.card.MaterialCardView>

          <com.google.android.material.textview.MaterialTextView
              android:id="@+id/groupMembers"
              android:layout_width="wrap_content"
              android:layout_height="25dp"
              android:layout_marginStart="84dp"
              android:layout_marginTop="84dp"
              android:fontFamily="@font/work_sans_black"
              android:gravity="center"
              android:text="@string/group_members"
              android:textSize="20sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              />
          <com.google.android.material.textview.MaterialTextView
              android:layout_width="wrap_content"
              android:layout_height="25dp"
              android:layout_marginStart="84dp"
              android:layout_marginTop="84dp"
              android:fontFamily="@font/work_sans_black"
              android:gravity="center"
              android:text="@string/group_members"
              android:textSize="20sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              />
          <com.google.android.material.textview.MaterialTextView
              android:id="@+id/userName"
              android:layout_width="112dp"
              android:layout_height="20dp"
              android:layout_marginTop="10dp"
              android:fontFamily="@font/work_sans_bold"
              android:gravity="center"
              android:text="@string/your_name"
              android:textSize="16sp"
              app:layout_constraintEnd_toEndOf="@+id/memberSelf"
              app:layout_constraintStart_toStartOf="@+id/memberSelf"
              app:layout_constraintTop_toBottomOf="@id/memberSelf"
              />
          <com.google.android.material.textview.MaterialTextView
              android:id="@+id/viewAllMembers"
              android:layout_width="170dp"
              android:layout_height="20dp"
              android:fontFamily="@font/work_sans_bold"
              android:gravity="center"
              android:text="@string/view_all"
              android:textColor="#880E4F"
              android:textSize="12sp"
              app:layout_constraintBaseline_toBaselineOf="@+id/userName"
              app:layout_constraintStart_toEndOf="@+id/userName"
              />

        </androidx.constraintlayout.widget.ConstraintLayout>
      </RelativeLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/recyclerContainer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="gone"
          >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="115dp"
            android:animateLayoutChanges="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#EDE4CC"
            app:strokeWidth="1dp"
            >
          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/membersRecyclerView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:itemCount="1"
              tools:listitem="@layout/card_member_details"
              />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:text="@string/back"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/recyclerContainer"
            app:layout_constraintStart_toStartOf="@+id/card"
            app:layout_constraintTop_toBottomOf="@+id/card"
            />
      </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
  </ScrollView>

  <com.google.android.material.card.MaterialCardView
      android:id="@+id/materialCardView"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_marginTop="20dp"
      android:elevation="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:cardCornerRadius="50dp"
      >
    <ImageView
        android:id="@+id/circleImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/group_logo"
        />
  </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>