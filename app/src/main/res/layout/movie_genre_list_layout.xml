<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    >
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/moviesRecycler"
      android:layout_width="match_parent"
      android:layout_height="180dp"
      android:layout_margin="10dp"
      android:orientation="horizontal"
      android:translationY="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/genreTextView"
      tools:listitem="@layout/movie_card_layout"
      />

  <com.google.android.material.chip.Chip
      android:id="@+id/browseMovies"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:text="@string/browse_all"
      android:textSize="14sp"
      android:translationY="3dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/genreTextView"
      app:layout_constraintTop_toTopOf="parent"
      />
  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/genreTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginEnd="120dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:fontFamily="@font/r_b_m_b"
      android:padding="4dp"
      android:text="@string/s_movies"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>