<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".group.ui.GroupDetailsActivity"
    >
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/searchTopBar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:elevation="10dp"
      android:visibility="gone"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/Widget.MaterialComponents.Toolbar.Primary"
      >
    <EditText
        android:id="@+id/searchGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:autofillHints="Name"
        android:hint="@string/search_groups"
        android:inputType="textAutoComplete"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        />
    <ImageButton
        android:id="@+id/cancelSearch"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/go_back_from_search"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintEnd_toStartOf="@id/searchGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        />
    <ImageButton
        android:id="@+id/eraseQuery"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/erase_written"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/searchGroup"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <com.google.android.material.button.MaterialButton
      android:id="@+id/button"
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:text="@string/go_to_chatbox"
      android:translationY="5dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/movieList"
      android:layout_width="350dp"
      android:layout_height="656dp"
      android:layout_margin="20dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toTopOf="@+id/button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
      tools:listitem="@layout/card_group_movie"
      />
  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBarLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/groupNameBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleCentered="true"
        app:menu="@menu/group_top_app_bar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        />

  </com.google.android.material.appbar.AppBarLayout>

  <com.leinardi.android.speeddial.SpeedDialView
      android:id="@+id/add_movie_floating_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|end"
      app:sdMainFabClosedSrc="@drawable/ic_baseline_add_24"
      app:layout_constraintBottom_toTopOf="@+id/button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_behavior="@string/speeddial_scrolling_view_snackbar_behavior"
      />

  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/groupDetailsPlaceholder"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="gone"
      android:animateLayoutChanges="true"
      android:text="@string/add_movies_and_strike_conversations"
      app:layout_constraintBottom_toTopOf="@+id/button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
      android:fontFamily="@font/pattaya_regular"
      android:textSize="20sp"
      />


</androidx.constraintlayout.widget.ConstraintLayout>