<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movieConstraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".movie.ui.MoviesActivity"
    >

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/movieViewRecyclerView"
      android:layout_width="match_parent"
      android:layout_height="616dp"
      app:layout_constraintBottom_toTopOf="@+id/browseGroupsButton"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/app_bar_layout"
      app:layout_constraintVertical_bias="0.0"
      tools:listitem="@layout/card_movie_genre"
      />
  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/app_bar_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:animateLayoutChanges="true"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/Widget.MaterialComponents.Toolbar.Primary"
      >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/material_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="SocialBox"
        android:animateLayoutChanges="true"
        app:titleCentered="true"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        />
    <EditText
        android:id="@+id/searchMovieEditText"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:animateLayoutChanges="true"
        android:autofillHints="name"
        android:background="@drawable/rounded_search_view"
        android:hint="@string/search_movies"
        android:visibility="gone"
        android:inputType="text"
        android:padding="5dip"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:textColor="?attr/textColor"
        android:textColorHint="#9B9B9B"
        />
  </com.google.android.material.appbar.AppBarLayout>

  <com.google.android.material.button.MaterialButton
      android:id="@+id/browseGroupsButton"
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:text="@string/browse_groups"
      android:translationY="5dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/searchMoviesRecyclerView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:visibility="gone"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
      tools:listitem="@layout/card_search_movie"
      />

</androidx.constraintlayout.widget.ConstraintLayout>

